{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "react-app"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
		"react/prop-types": 0,
		"semi": [2, "always"]
    },
	"overrides": [
		{
		  "files": ["**/*.ts?(x)"],
		  "rules": {
			"additional-typescript-only-rule": "warn",
			"semi": [2, "always"]
		  }
		}
	  ]
}
